<launch>
  <!-- Remember to first launch Gazebo with a underwater world model
  Example:
  >> roslaunch uuv_description ocean_waves.launch
    or
  >> roslaunch uuv_description empty_underwater_world.launch

  The default joystick configuration is set for the Logitech Extreme 3D Pro
  -->
  <arg name="namespace" default="rexrov"/>
  <arg name="joy_id" default="0"/>
  <arg name="gripper" default="parallel"/>
  <arg name="use_jt" default="0"/>

  <include file="$(find uuv_gazebo)/launch/rexrov_oberon_demo.launch">
    <arg name="namespace" default="$(arg namespace)"/>
    <arg name="joy_id" default="$(arg joy_id)"/>
    <arg name="use_jt" default="$(arg use_jt)"/>
    <!-- Joystick mapping for the vehicle control -->
    <arg name="axis_yaw" default="2"/>
    <arg name="axis_x" default="1"/>
    <arg name="axis_y" default="0"/>
    <arg name="axis_z" default="5"/>
    <arg name="deadman_button" default="-1"/>
    <arg name="exclusion_buttons" default="1"/>
    <!-- Joystick mapping for the joint control node -->
    <arg name="axis_oberon_jc_azimuth" default="2"/>
    <arg name="axis_oberon_jc_shoulder" default="1"/>
    <arg name="axis_oberon_jc_elbow" default="0"/>
    <arg name="axis_oberon_jc_roll" default="3"/>
    <arg name="axis_oberon_jc_pitch" default="4"/>
    <arg name="axis_oberon_jc_yaw" default="5"/>
    <!-- Joystick mapping for the Jacobian transpose control node -->
    <arg name="axis_oberon_jt_x" default="1"/>
    <arg name="axis_oberon_jt_y" default="0"/>
    <arg name="axis_oberon_jt_z" default="5"/>
    <arg name="axis_oberon_jt_roll" default="3"/>
    <arg name="axis_oberon_jt_pitch" default="4"/>
    <arg name="axis_oberon_jt_yaw" default="2"/>

    <arg name="oberon_exclusion_button" default="3"/>
    <arg name="oberon_deadman_button" default="1"/>
    <arg name="oberon_home_button" default="6"/>

    <arg name="gripper_open_button" default="11"/>
    <arg name="gripper_close_button" default="10"/>
  </include>
</launch>
