<?xml version="1.0"?>
<robot name="orion_7p" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Import all Gazebo-customization elements, including Gazebo colors -->
  <xacro:include filename="$(find orion_7p_description)/urdf/serial_arm.gazebo.xacro" />
  <!-- Import serial arm -->
  <xacro:include filename="$(find orion_7p_description)/urdf/serial_arm.xacro" />
  <!-- Import simple gripper -->
  <xacro:include filename="$(find orion_7p_description)/urdf/dummy_gripper.xacro" />

  <!-- Orion 7P + Dummy gripper -->
  <xacro:macro name="orion_7p" params="namespace parent *origin">
    <xacro:serial_arm namespace="${namespace}" parent="${parent}">
      <insert_block name="origin"/>
    </xacro:serial_arm>

    <xacro:dummy_gripper namespace="${namespace}" parent="${namespace}/end_effector"/>
  </xacro:macro>

</robot>
